<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXTextField?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" fx:id="rootPane" prefHeight="248.0" prefWidth="340.0" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="academiccalendar.ui.addcalendar.AddCalendarController">
    <stylesheets>
        <URL value="@add_calendar.css" />
    </stylesheets>
   <children>
      <HBox prefHeight="35.0" prefWidth="340.0" style="-fx-background-color: #EFEFEF;">
         <children>
            <Label fx:id="topLabel" prefHeight="30.0" prefWidth="312.0" text=" Create Calendar">
               <font>
                  <Font size="15.0" />
               </font>
               <HBox.margin>
                  <Insets left="10.0" top="5.0" />
               </HBox.margin>
               <graphic>
                  <ImageView fitHeight="41.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../icons/calendar_icon.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Label>
            <Label fx:id="exit" onMouseClicked="#exit" prefHeight="37.0" prefWidth="39.0" styleClass="exit-label" stylesheets="@../addevent/addEvent.css">
               <graphic>
                  <ImageView fitHeight="30.0" fitWidth="28.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../icons/exit_icon.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Label>
         </children>
      </HBox>
      <VBox layoutX="10.0" layoutY="59.0" prefHeight="131.0" prefWidth="320.0" spacing="20.0">
         <children>
            <JFXTextField fx:id="calendarName" focusColor="#4d4d4d" labelFloat="true" prefHeight="46.0" prefWidth="320.0" promptText="Name">
               <font>
                  <Font size="13.0" />
               </font>
            </JFXTextField>
            <HBox prefHeight="63.0" prefWidth="320.0">
               <children>
                  <JFXComboBox fx:id="startYear" prefHeight="25.0" prefWidth="148.0" promptText="Starting Year" />
                  <Label text="to" />
                  <JFXComboBox fx:id="endYear" prefHeight="25.0" prefWidth="143.0" promptText="Ending Year">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </JFXComboBox>
               </children>
            </HBox>
         </children>
      </VBox>
      <HBox prefHeight="41.0" prefWidth="340.0" AnchorPane.bottomAnchor="0.0">
         <children>
            <JFXButton fx:id="generate" prefHeight="40.0" prefWidth="200.0" styleClass="jfx-button" stylesheets="@../addevent/addEvent.css" text="Generate New Calendar">
               <font>
                  <Font size="13.0" />
               </font>
            </JFXButton>
            <JFXButton fx:id="cancel" onMouseClicked="#cancel" prefHeight="40.0" prefWidth="200.0" styleClass="jfx-button" stylesheets="@../addevent/addEvent.css" text="Cancel">
               <font>
                  <Font size="13.0" />
               </font>
            </JFXButton>
         </children>
      </HBox>
   </children>
</AnchorPane>
